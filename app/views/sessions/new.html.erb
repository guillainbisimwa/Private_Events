<h1>Welcome to the Login Page of Private Events app</h1>

<div class="center_div">

  <%= form_with scope: :session, url: login_path, method: :post do |form| %>
    <div class="form-group mt-5">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: "form-control", placeholder: "Your first name here"%>
    </div>  
    <div class="form-group">
      <%= form.label :id %>
      <%= form.number_field :number_field, class: "form-control col-sm-4", placeholder: "Your id here"%>
    </div>
    <div class="form-group">
      <%= form.submit "Login user", class: "btn btn-lg btn-primary" %>
    </div>
    <br>
  <% end %>
</div>
