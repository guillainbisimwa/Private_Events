<h1>Index Events</h1>
<div class="card-group row">
  <% @events.each do |event| %>
  <div class="col-sm-3">
  <div class="card">
  <div class="card-body">
      <h5 class="card-title" >EVENT</h5>

    <% unless event.title.nil? %>
      <h5 class="card-title" ><%= event.title %></h5>
    <% else %>
      <p class="card-text"> <%= event.description %></p>
    <% end %>
  </div>
  </div>
  </div>
  <% end %>
</div>