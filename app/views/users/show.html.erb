<h1>Hello <%= @user.first_name.titlecase %> to show page</h1>

<h2 class="my-5">Events <%= @user.first_name.titlecase %> has created</h2>

<div class="card-group row">
  <% @user.created_events.each do |event| %>
  <div class="col-sm-3 my-3">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title" >MY EVENT</h5>

        <% unless event.title.nil? %>
          <p class="card-title" ><%= event.title %></p>
          <p class="card-title" ><%= event.datetime %></p>
        <% else %>
          <p class="card-text"> <%= event.description %></p>
          <p class="card-text"> <%= event.datetime %></p>
        <% end %>
      </div>
      <div class="card-footer">
          <%= link_to "Show the event", event %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<h2 class="my-5">Upcoming events</h2>

<div class="card-group row">
  <% @user.attended_events.each do |event| %>
    <% unless event.search_event(event.event_id).datetime.nil? %>
      <% if event.search_event(event.event_id).datetime > DateTime.now %>
        <div class="col-sm-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title" >MY EVENT</h5>

              <% unless event.search_event(event.event_id).title.nil? %>
                <p class="card-title" ><%= event.search_event(event.event_id).title %></p>
                <p class="card-title" ><%= event.search_event(event.event_id).datetime %></p>
              <% else %>
                <p class="card-text"><%= event.search_event(event.event_id).description %></p>
                <p class="card-text"><%= event.search_event(event.event_id).datetime %></p>
              <% end %>
            </div>
            <div class="card-footer">
                <%= link_to "Show the event", event.search_event(event.event_id) %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>


<h2 class="my-5">Previously attended events</h2>

<div class="card-group row">
  <% @user.attended_events.each do |event| %>
    <% unless event.search_event(event.event_id).datetime.nil? %>
      <% if event.search_event(event.event_id).datetime <= DateTime.now %>
        <div class="col-sm-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title" >MY EVENT</h5>

              <% unless event.search_event(event.event_id).title.nil? %>
                <p class="card-title" ><%= event.search_event(event.event_id).title %></p>
                <p class="card-title" ><%= event.search_event(event.event_id).datetime %></p>
              <% else %>
                <p class="card-text"><%= event.search_event(event.event_id).description %></p>
                <p class="card-text" ><%= event.search_event(event.event_id).datetime %></p>
              <% end %>
            </div>
            <div class="card-footer">
                <%= link_to "Show the event", event.search_event(event.event_id) %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>